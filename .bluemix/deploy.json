{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "messages": {
        "$i18n": "locales.yml"
    },
    "title": {
        "$ref": "#/messages/deploy.title"
    },
    "description": {
        "$ref": "#/messages/deploy.description"
    },
    "longDescription": {
        "$ref": "#/messages/deploy.longDescription"
    },
    "type": "object",
    "properties": {
        "api-key": {
            "description": "The IBM Cloud API key is used to access the IBM Container Service API and interact with the cluster. You can obtain your API key with 'ibmcloud iam api-key-create' or via the console at https://console.ng.bluemix.net/iam/#/apikeys by clicking **Create API key** (Each API key only can be viewed once).",
            "type": "string",
            "pattern": "\\S"
        },
       "registry-region": {
          "description": "The IBM Cloud region for image registry",
          "type": "string"
        },
       "registry-namespace": {
          "description": "Namespace in container image registry",
          "type": "string",
          "pattern": "^[a-z0-9][a-z0-9_-]{2,28}[a-z0-9]$"
        },
        "staging-region": {
          "description": "Staging region",
          "type": "string"
        },
        "staging-resource-group": {
          "description": "Staging resource group",
          "type": "string",
          "pattern": "\\S"
        },
       "staging-cluster-name": {
          "description": "Name of staging cluster",
          "type": "string",
          "pattern": "\\S"
        },
        "staging-cluster-namespace": {
          "description": "Namespace in staging cluster",
          "type": "string",
          "pattern": "\\S"
        },
        "prod-region": {
          "description": "Production region",
          "type": "string"
        },
        "prod-resource-group": {
          "description": "Production resource-group",
          "type": "string",
          "pattern": "\\S"
        },              
       "prod-cluster-name": {
          "description": "Name of production cluster",
          "type": "string",
          "pattern": "\\S"
        },
        "prod-cluster-namespace": {
          "description": "Namespace in production cluster",
          "type": "string",
          "pattern": "\\S"
        },    
        "umbrella-app-name": {
          "description": {
              "$ref": "#/messages/deploy.umbrellaAppDescription"
          },
          "type": "string",
          "pattern": "\\S",
          "maxLength": 63
        }
    },
    "required": [
        "api-key",
        "registry-region",
        "registry-namespace",
        "staging-region",
        "staging-resource-group",
        "staging-cluster-name",
        "staging-cluster-namespace",        
        "prod-region",
        "prod-resource-group",
        "prod-cluster-name",
        "prod-cluster-namespace",
        "umbrella-app-name"
    ],
    "form": [
        {
            "type": "validator",
            "url": "/devops/setup/bm-helper/helper.html"
        },
        {
            "type": "text",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.umbrellaAppName"
            },
            "key": "umbrella-app-name"
        },
        {
            "type": "password",
            "readonly": false,
            "title": "IBM Cloud API key",
            "key": "api-key"
        },           
        {
            "type": "table",
            "columnCount": 5,
            "widths": [
                "15%",
                "15%",
                "30%",
                "15%",
                "30%"
            ],
            "items": [
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/registry"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/region"
                    }
                },
                {
                  "type": "select",
                  "title": "Registry region",
                  "key": "registry-region"
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/registryNamespace"
                    }
                },
                {
                  "type": "text",
                  "readonly": false,
                  "title": "Container image registry namespace",
                  "key": "registry-namespace"
                },


                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/testStage"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/region"
                    }
                },
                {
                  "type": "select",
                  "key": "staging-region"
                },                
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/resourceGroup"
                    }
                },
                {
                  "type": "text",
                  "key": "staging-resource-group",
                  "readonly": false
                },               


                {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/clusterName"
                    }
                },
                {
                  "type": "select",
                  "key": "staging-cluster-name",
                  "readonly": false
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/clusterNamespace"
                    }
                },
                {
                  "type": "text",
                  "key": "staging-cluster-namespace",
                  "readonly": false
                },


                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/prodStage"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/region"
                    }
                },
                {
                  "type": "select",
                  "key": "prod-region"
                },                
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/resourceGroup"
                    }
                },
                {
                  "type": "text",
                  "key": "prod-resource-group",
                  "readonly": false
                },               


                {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/clusterName"
                    }
                },
                {
                  "type": "select",
                  "key": "prod-cluster-name",
                  "readonly": false
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/clusterNamespace"
                    }
                },
                {
                  "type": "text",
                  "key": "prod-cluster-namespace",
                  "readonly": false
                }
            ]
        },{
          "type": "table",
          "columnCount": 2,
            "widths": ["15%", "80%"],
            "items": [
                {
                  "type": "label",
                  "title": ""
                },{
                  "type": "label",
                  "title": "Retrieve the Kubernetes cluster name with the CLI command 'ibmcloud cs clusters' or via the [console](https://console.bluemix.net/containers-kubernetes/home/clusters)."
                }
            ]
        },{
          "type": "table",
          "columnCount": 2,
            "widths": ["15%", "80%"],
            "items": [
                {
                  "type": "label",
                  "title": ""
                },{
                  "type": "label",
                  "title": "If the cluster namespace doesn't exist already, it will be automatically created and configured."
                }
            ]
        }
    ]
}